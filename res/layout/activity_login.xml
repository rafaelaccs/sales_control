<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sales.control.LoginActivity" >

  <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
  
    
    <TextView 
        android:text="@string/login_txtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <EditText 
        android:id="@+id/login_edtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
         />
    
    <TextView 
        android:text="@string/login_txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <EditText 
        android:id="@+id/login_edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:textStyle="bold"
        />
    
    <CheckBox 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_ckbConectado"
        android:text="@string/login_ckbConected"
        android:layout_marginBottom="10dp"
        />
    
    <Button 
        android:id="@+id/login_btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_btnLogin"
        android:background="#333"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:onClick="logar"
        />
	</LinearLayout>
</ScrollView>
